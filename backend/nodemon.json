{
  "watch": [
    "server.js",
    "routes/",
    "services/",
    "config/",
    "middleware/"
  ],
  "ignore": [
    "node_modules/",
    "screenshots/",
    "chrome-automation-profile/",
    "*.png",
    "*.jpg",
    "*.jpeg",
    "*.log",
    "test-*.js",
    "debug_*.png",
    "*.tmp",
    "*.temp",
    "*.cache",
    "logs/",
    "temp/",
    "cache/",
    ".env.local",
    ".env.*.local",
    "*.pid",
    "*.lock",
    "chrome-automation-profile/**/*",
    "**/chrome-automation-profile/**/*"
  ],
  "ext": "js,json",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": "2000",
  "verbose": true,
  "legacyWatch": false,
  "polling": false,
  "restartable": "rs",
  "colours": true,
  "quiet": false
}
